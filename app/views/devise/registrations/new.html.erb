<div class="row">
  <div class="col m6 offset-m3 center">
    <br/>
    
    <h5>会員登録(ソーシャル連携)</h5>

    <%= render 'devise/shared/social_links', social_devise: "登録" %>
    
    <div class="divider"></div>
    <h5>会員登録（メールアドレス登録）</h5>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render partial: "shared/devisemes" %>

      <div class="input-field">
        <%= f.text_field :name, autofocus: true, :class => "validate", :placeholder => "Name" %>
      </div>

      <div class="input-field">
        <%= f.email_field :email, :class => "validate", :placeholder => "Email" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Password" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">会員登録</button>
    <% end %>
  </div>
</div>